<body>
  <div class="parallax-container" style="z-index: -10;">
    <div class="parallax">
      <img src="/09733cf4fd9280abb95c448d05dd07b6.jpg"></div>
    </div>

    <div class="container">

      <div class="row" >

        <div class="col m12 s12 l3" >
          <div class="card-panel  hoverable "style="height:300px">
            <span class="white-text">
              <h5>News Update</h5><hr>
              <marquee style="height:200px" direction="up" onmouseover="this.stop();" onmouseout="this.start();">
              <% @newsupdate.each do |newsupdate| %>
              <b><%= newsupdate.news %></b>
              <br>

              <% end %>
            </marquee>
            </span>
          </div>
          <div class="card-panel  hoverable" style="height: 328px;">
            <span class="white-text">

              <h5>Publishing Partner</h5><hr>

                <marquee direction="up" onmouseover="this.stop();" onmouseout="this.start();" style="height:200px" >
              <% @publishpartners.each do |publishpartner| %>
                    <!-- <div class="col m3 s3 l9"> --> <br>
                      <img src="<%="/PublishPartner/" + publishpartner.image%>" style="width:150px;"><br>
                      <span><a href="<%= publishpartner.url %>"><%= publishpartner.content %></a></span>
                    <!-- </div> -->

              <% end %>
            </marquee>



            </span>
          </div>
        </div>


        <div class="col m12 s12 l5">
          <div class="card-panel  hoverable" style="overflow:hidden; height:650px">
            <span class="white-text">
              <h4 >About Conference</h4>
              <hr>
              <%= @aboutconference %>
            </span>
          </div>
        </div>

        <div class="col m12 s12 l4">
          <div class="card-panel  hoverable" style=" height:300px">
            <span class="white-text">
              <h5>Important Dates</h5><hr>
<marquee direction="up" onmouseover="this.stop();" onmouseout="this.start();" >
              <% @important_dates.each do |impdate| %>
              <b><%= impdate.title %></b>
              <br>
              <%= impdate.date.to_date.to_formatted_s(:long_ordinal) %>
              <br><hr />

              <% end %>
              </marquee>
            </span>
          </div>
        </div>
        <div class="col m12 s12 l4"  style="height: 350px;">

          <div class="card-panel  hoverable" style="height: 328px">
            <span class="white-text">
              <h5>KeyNote Speaker</h5><hr>
              <marquee style="height:200px" direction="up" onmouseover="this.stop();" onmouseout="this.start();">
              <div class="row">
                <% @keynotespeaker.each do |keynotespeaker| %>
                    <div class="col s3 m3 l6">
                      <img src="<%="/keynotespeaker/" + keynotespeaker.image%>"  style="width:150px;">
                      <span><a href="<%= keynotespeaker.url %>"><%= keynotespeaker.caption %></a></span>
                    </div>
                <% end %>
              </marquee>

              </div>
            </span>
          </div>
        </div>
        <!-- <div class="col m12 s12 l3" style="height: 300px;"> -->


        <!-- </div> -->






      </div>
      <div class="row sponsors card-panel hoverable" style="  background-color: #74b5eb; margin: 0 10px 0 10px;">
        <div class="col m12 l12 s12">
          <h4 style="margin-left:460px;">SPONSORS</h4>
          <hr><br>
        </div>
        <% @sponsors.each do |sponsor| %>
        <!-- <div class="col s12 m12 l12"> -->
        <%= render 'sponsor' , sponsor: sponsor %>
        <!-- </div> -->
        <% end %>
      </div>

      <div class="row">

        <div class="col m12 s12 l6">
          <div class="card-panel hoverable" style="height: 480px;">
            <span class="white-text">
              <h5>Paper Submission</h5><hr>
              <% @papersubmission.each do |papersubmission| %>
              <div class="card" style="background:none">
                <div class="card-image">
                  <img src="<%="/PaperSubmission/" + papersubmission.url%>" class="responsive-img activator"  >
                </div>
              </div>
              <% end %>
            </span>
          </div>

        </div>

        <div class="col m12 s12 l6">
          <div class="card-panel  hoverable"  style="height: 480px">
            <span class="white-text">
              <h5>Tourism Selection</h5><hr>
              <div class="card"5
                <div class="card-image">
                  <img src="/akshardham.jpg" class="responsive-img activator">
                </div>

              </div>

            </span>
          </div>

        </div>
      </div>



      <div class="row">




        <div class="col m12 s12 l12">
          <div class="card-panel  hoverable">
            <span class="white-text">
              <h5>Recent Visitors</h5><hr>
              <div class="card">
                <div class="card-image">
                  <img src="/map1.png" class="responsive-img activator">
                </div>
              </div>

            </span>
          </div>
        </div>


      </div>


    </div>
    <!-- container ends here -->
<div class="row">
  <main style="background-color:#3498DB; padding-bottom40px;">
