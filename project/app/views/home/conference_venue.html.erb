<section class="sub-page" id="conference_venue">
  <div class="row">
    <div class="col-md-8">
      <h1 class="custom-font">Conference Venue</h1>
      <hr>
      <h3 class="text-danger"> <b> All the accepted papers are invited to present virtually using Microsoft Teams due to Covid-19 Pandemic globally. The online paper presentation schedule of the conference will be shared soon after the registrations of the paper.</b> </h3>
    </div>
    <div class="col-md-4">
      <div class="box right">
          <h1 class="custom-font">Important Dates</h1>
          <hr>

          <marquee behavior="" direction="up"  truespeed="true" scrolldelay = "150" onmouseover="this.stop();" onmouseout="this.start();" >
              <% @important_dates.each do |impdate| %>
                  <b><%= impdate.title %></b>
                  <br>
                  <%= impdate.date.to_date.to_formatted_s(:long_ordinal) %>
                  <br><hr />

              <% end %>


            </marquee>
          <span> <a href="/important_dates">Read More...</a> </span>

      </div>
    </div>
  </div>
</section>
